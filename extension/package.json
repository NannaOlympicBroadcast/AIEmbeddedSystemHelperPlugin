{
  "name": "ai-embedded-system-helper",
  "displayName": "AI Embedded System Helper",
  "description": "AI assistant for embedded systems development, powered by Google ADK and LiteLLM.",
  "version": "0.1.0",
  "publisher": "NannaOlympicBroadcast",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "keywords": [
    "embedded",
    "firmware",
    "AI",
    "assistant",
    "LLM",
    "ADK"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/NannaOlympicBroadcast/AIEmbeddedSystemHelperPlugin"
  },
  "icon": "media/icon.png",
  "activationEvents": [
    "onCommand:aiEmbeddedHelper.openChat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiEmbeddedHelper.openChat",
        "title": "AI Embedded Helper: Open Chat"
      }
    ],
    "configuration": {
      "title": "AI Embedded System Helper",
      "properties": {
        "aiEmbeddedHelper.backendUrl": {
          "type": "string",
          "default": "http://127.0.0.1:8000",
          "description": "Base URL of the Google ADK backend server."
        },
        "aiEmbeddedHelper.streamingEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Use streaming (SSE) responses when available."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "publish:ovsx": "ovsx publish"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/vsce": "^2.24.0",
    "ovsx": "^0.9.0"
  }
}
